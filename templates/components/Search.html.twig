<div{{ attributes }}>
    <!-- component html -->
    <h1 class="mb-2">Résultats de votre recherche</h1>
    
    <div class="bg-white rounded-md shadow">
        <input type="text" data-model="query" 
            class="w-full p-2 text-sm rounded-md focus:outline-none" 
            placeholder="Tapez un mot clé...">
    </div>

    <section class="mt-4 pt-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4">
            {% if this.todos|length > 0 %}
                {% for todo in this.todos %}
                    <a href="{{ path('todos_show', { ref: todo.ref }) }}" class="rounded-lg shadow p-4 bg-white hover:-translate-y-1 hover:shadow-md transition-all ease-in-out duration-300 relative">
                        <h3 class="text-xl font-bold w-full overflow-hidden whitespace-nowrap overflow-ellipsis">
                            {{ todo.name }}
                        </h3>
                        <div class="flex gap-2 items-center mt-1">
                            <div class="h-5 w-5 bg-gradient-to-r from-emerald-200 to-emerald-400 rounded-full"></div>
                            <div class="flex flex-col">
                                <p class="text-sm text-neutral-500">il y a {{ todo.createdAt|time_diff }}</p>
                                <p class="text-sm text-neutral-500">par {{ todo.creator.username }}</p>
                            </div>
                        </div>
                        <p class="text-sm bg-slate-200 absolute bottom-0 right-0 px-2 py-1 rounded-tl-xl">
                            {{ ux_icon('mdi:eye', { class: 'h-5' }) }}
                        </p>
                    </a>
                {% endfor %}
            {% else %}
                <p class="text-neutral-500">Aucune liste de tâches pour le moment.</p>
                
            {% endif %}
        </div>
    </section>
</div>
